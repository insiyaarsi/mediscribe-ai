@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Fade-in animation for results */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(15px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Slide-in animation for cards */
.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Smooth transitions for all interactive elements */
button, a, .transition-all {
  transition: all 0.2s ease-in-out;
}

/* Hover effect for buttons */
button:hover {
  transform: translateY(-1px);
}

button:active {
  transform: translateY(0);
}

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}

/* Loading pulse animation */
.pulse-animation {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Scale animation for badges */
.scale-in {
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Staggered fade-in for entity badges */
.stagger-fade-in {
  animation: fadeIn 0.3s ease-in backwards;
}

.stagger-fade-in:nth-child(1) { animation-delay: 0.05s; }
.stagger-fade-in:nth-child(2) { animation-delay: 0.1s; }
.stagger-fade-in:nth-child(3) { animation-delay: 0.15s; }
.stagger-fade-in:nth-child(4) { animation-delay: 0.2s; }
.stagger-fade-in:nth-child(5) { animation-delay: 0.25s; }
.stagger-fade-in:nth-child(n+6) { animation-delay: 0.3s; }

/* Smooth progress bar animation */
.progress-bar {
  transition: width 0.5s ease-out;
}

/* Print Styles - Add these to the end of your index.css file */

@media print {
  /* Reset body */
  body {
    background: white !important;
    margin: 0;
    padding: 0;
  }

  /* Hide header, upload, history, and other UI elements */
  header,
  nav,
  .print\\:hidden {
    display: none !important;
  }

  /* Hide gradient background */
  body > div > div {
    background: white !important;
    padding: 0 !important;
    min-height: auto !important;
  }

  /* Ensure SOAP note container is visible */
  .print-soap-note {
    display: block !important;
    background: white !important;
    box-shadow: none !important;
    border-radius: 0 !important;
    margin: 0 !important;
    padding: 20mm 15mm !important;
  }

  /* Remove all background colors except section highlights */
  * {
    box-shadow: none !important;
  }

  /* Force black text for readability */
  h1, h2, h3, h4, h5, h6, p, span, div, li {
    color: black !important;
  }

  /* Keep section colors subtle but visible */
  .bg-blue-50,
  .dark\\:bg-blue-900\\ {
    background: #eff6ff !important;
  }

  .bg-green-50,
  .dark\\:bg-green-900\\ {
    background: #f0fdf4 !important;
  }

  .bg-yellow-50,
  .dark\\:bg-yellow-900\\{
    background: #fefce8 !important;
  }

  .bg-purple-50,
  .dark\\:bg-purple-900\\ {
    background: #faf5ff !important;
  }

  /* Keep border colors */
  .border-blue-500,
  .dark\\:border-blue-400 {
    border-color: #3b82f6 !important;
  }

  .border-green-500,
  .dark\\:border-green-400 {
    border-color: #22c55e !important;
  }

  .border-yellow-500,
  .dark\\:border-yellow-400 {
    border-color: #eab308 !important;
  }

  .border-purple-500,
  .dark\\:border-purple-400 {
    border-color: #a855f7 !important;
  }

  /* Prevent page breaks inside sections */
  .soap-section {
    page-break-inside: avoid;
    margin-bottom: 15px !important;
  }

  /* Page settings */
  @page {
    margin: 15mm;
    size: A4 portrait;
  }

  /* Print header styling */
  .print-header {
    border-bottom: 2px solid #000 !important;
    padding-bottom: 10px !important;
    margin-bottom: 20px !important;
  }

  /* Hide dark mode specific elements */
  .dark\\:bg-gray-800,
  .dark\\:bg-gray-700,
  .dark\\:text-white,
  .dark\\:text-gray-300 {
    background: white !important;
    color: black !important;
  }

  /* Ensure lists and paragraphs print correctly */
  ul, ol {
    margin-left: 20px;
  }

  li {
    margin-bottom: 5px;
  }

  p {
    margin-bottom: 10px;
  }
}